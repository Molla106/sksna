        // 랜덤 문장 뽑기 함수
        function getRandomSentences() {
            let numberOfSentences = 3; // 뽑을 문장의 개수
            let randomSentences = [];
            
            // 주제 목록을 배열로 가져옴
            const topicKeys = Object.keys(topics);
            
            // 주제 목록에서 랜덤으로 3개의 주제를 뽑음
            let selectedTopics = [];
            while (selectedTopics.length < numberOfSentences) {
                const randomTopic = topicKeys[Math.floor(Math.random() * topicKeys.length)];
                
                // 중복 체크
                if (!selectedTopics.includes(randomTopic)) {
                    selectedTopics.push(randomTopic);
                }
            }

            // 선택된 각 주제에서 랜덤 문장 뽑기
            selectedTopics.forEach(topic => {
                const randomSentence = topics[topic][Math.floor(Math.random() * topics[topic].length)];
                randomSentences.push(randomSentence);
            });

            // [문장1], [문장2], [문장3]을 각 문장에 추가하고 줄바꿈 추가
            let resultText = randomSentences.map((sentence, index) => 
                `<div><span class="question-number">[질문 ${index + 1}]</span><br><div class="question-container">${sentence}</div></div>`
            ).join("");

            // 결과를 화면에 출력 (줄바꿈을 위해 innerHTML 사용)
            document.getElementById('result').innerHTML = 
                `<span class="question-title">[문항] 실연한 수업에 대하여 다음 질문에 답하시오(총 10분 이내)</span><br><br>` + resultText;
        }
    </script>

</body>
</html>
